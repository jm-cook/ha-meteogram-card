{
  "name": "ha-meteogram-card",
  "version": "1.0.3-beta0",
  "description": "A custom card showing a 48-hour meteogram with wind barbs for Home Assistant",
  "type": "module",
  "main": "meteogram-card.js",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "watch": "rollup -c --watch --bundleConfigAsCjs",
    "download-icons": "node scripts/download-icons.cjs",
    "lint": "eslint --ext .ts --ext .js --fix src",
    "start": "npm run build && serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jm-cook/ha-meteogram-card.git"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards",
    "weather",
    "meteogram"
  ],
  "author": "Jeremy Cook",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.9.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "lit": "^3.1.0"
  }
}
